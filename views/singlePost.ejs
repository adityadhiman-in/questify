<%- include("partials/header.ejs") %>

<div class="container my-5">
  <div class="card">
    <img src="<%= post.image %>" class="card-img-top" alt="Post Image" />
    <div class="card-body">
      <h2 class="card-title"><%= post.title %></h2>
      <p class="card-text"><%= post.description %></p>
      <p class="card-text"><strong>Location:</strong> <%= post.location %></p>
      <p class="card-text"><strong>Contact:</strong> <%= post.contact %></p>
      <div class="d-flex justify-content-between">
        <button class="btn btn-primary" onclick="shareOnSocialMedia()">
          Share
        </button>
        <a href="mailto:<%= post.contact %>" class="btn btn-secondary"
          >Contact via Email</a
        >
      </div>
    </div>
  </div>
</div>

<script>
  function shareOnSocialMedia() {
    const postUrl = window.location.href;
    const postTitle = document.querySelector(".card-title").innerText;

    // WhatsApp
    const whatsappShareUrl = `https://wa.me/?text=${encodeURIComponent(
      postTitle + " " + postUrl
    )}`;
    // Twitter
    const twitterShareUrl = `https://twitter.com/intent/tweet?url=${encodeURIComponent(
      postUrl
    )}&text=${encodeURIComponent(postTitle)}`;
    // Instagram (Direct sharing to Instagram is not supported, but you can suggest to share via the app)
    const instagramShareUrl = `https://www.instagram.com/?url=${encodeURIComponent(
      postUrl
    )}`;

    // Open share options in a new window
    window.open(whatsappShareUrl, "_blank");
    window.open(twitterShareUrl, "_blank");
    window.open(instagramShareUrl, "_blank");
  }
</script>

